@page "/categoris"
@model QLquanCafe.Pages.Categoriess.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center mb-4">Categories</h1>

<div class="container mt-5">
    <!-- Create Button -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-page="Create" class="btn btn-primary btn-lg">Create New Category</a>
    </div>

    <!-- Categories Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Category[0].Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Category != null && Model.Category.Any())
                {
                    @foreach (var item in Model.Category)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-center">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">Details</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No categories available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
