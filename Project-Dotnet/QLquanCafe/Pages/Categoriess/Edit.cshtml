@page
@model QLquanCafe.Pages.Categoriess.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="text-center mb-4">Edit Category</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Edit Category</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Category.Id" />

                        <!-- Category Name -->
                        <div class="mb-4">
                            <label asp-for="Category.Name" class="form-label fw-semibold">Name</label>
                            <input asp-for="Category.Name" class="form-control form-control-lg" placeholder="Enter category name" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>

                        <!-- Category Description -->
                        <div class="mb-4">
                            <label asp-for="Category.Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Category.Description" class="form-control form-control-lg" rows="4" placeholder="Enter category description"></textarea>
                            <span asp-validation-for="Category.Description" class="text-danger"></span>
                        </div>

                        <!-- Save Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-3 text-center">
                <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
