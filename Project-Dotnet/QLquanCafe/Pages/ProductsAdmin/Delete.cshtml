@page
@model QLquanCafe.Pages.ProductsAdmin.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<p>Are you sure you want to delete this product?</p>

<div>
    <h3>Product Details</h3>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Product.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Product.Price</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Product.Category.Name</dd>
        <dt class="col-sm-2">Images</dt>
        <dd class="col-sm-10">
            @foreach (var img in Model.Product.ImgProducts)
            {
                <img src="@img.Path" alt="Product Image" class="img-thumbnail" style="max-height: 100px;" />
            }
        </dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-primary">Delete</button>
</form>

<a asp-page="./Index" class="btn btn-primary mt-3">Back to List</a>