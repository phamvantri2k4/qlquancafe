@page
@model QLquanCafe.Pages.ProductsAdmin.CreateModel
@{
    ViewData["Title"] = "Create New Product";
}

<h1 class="text-center mb-4">Create New Product</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Product Name -->
    <div class="form-group mb-4">
        <label asp-for="Product.Name" class="form-label fw-semibold"></label>
        <input asp-for="Product.Name" class="form-control form-control-lg" placeholder="Enter product name" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <!-- Product Description -->
    <div class="form-group mb-4">
        <label asp-for="Product.Description" class="form-label fw-semibold"></label>
        <textarea asp-for="Product.Description" class="form-control form-control-lg" rows="4" placeholder="Enter product description"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <!-- Product Price -->
    <div class="form-group mb-4">
        <label asp-for="Product.Price" class="form-label fw-semibold"></label>
        <input asp-for="Product.Price" class="form-control form-control-lg" placeholder="Enter product price" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <!-- Product Category -->
    <div class="form-group mb-4">
        <label asp-for="Product.CategoryId" class="form-label fw-semibold"></label>
        <select asp-for="Product.CategoryId" asp-items="ViewBag.CategoryId" class="form-control form-control-lg">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <!-- Images -->
    <div class="form-group mb-4">
        <label class="form-label fw-semibold">Images</label>
        <input type="file" name="productImages" multiple class="form-control-file" />
    </div>

    <!-- Submit Button -->
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg">Create Product</button>
    </div>
</form>
<div class="mt-3 text-center">
    <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
</div>
